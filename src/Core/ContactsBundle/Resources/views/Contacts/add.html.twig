{% extends '::base.html.twig' %}
{% block page_title %}Add contact{% endblock %}
{% block fos_user_content %}
    <h1>Contact creation</h1>
    {{ form_start(form, {'method': 'post', 'action': path('contacts_add')}) }}
    {{ form_widget(form) }}
    <button type="submit" class="submit btn btn-md btn-success">
        <i class="fa fa-plus"></i> Add
    </button>
    <button class="submit btn btn-md">Back to the list
        <a href="{{ path('contacts_index') }}"></a>
    </button>
    {{ form_end(form) }}
{% endblock %}
