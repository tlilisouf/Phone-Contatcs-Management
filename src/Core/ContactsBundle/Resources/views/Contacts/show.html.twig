{% extends '::base.html.twig' %}
{% block fos_user_content %}
    <div class="row">
        <div class="col-lg-10">
            <div class="box">
                <div class="box-header">
                    <h2>
                        <i class="fa fa-gears"></i>
                        <span class="break">Actions</span>
                    </h2>
                </div>
                <div class="box-content">
                    <a href="{{ path('contacts_edit', {id: contact.id}) }}" class="btn btn-sm btn-warning">
                        <i class="fa fa-pencil"></i> Edit
                    </a>
                    <form action="{{ path('contacts_delete', {id: contact.id}) }}"
                          method="POST" class="form-inline" data-action="confirm-submission"
                          data-confirmation-message="{{ "Delete the contact ?" }}">
                        <input name="_token" type="hidden"
                               value="{{ csrf_token('contacts_delete') }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="fa fa-close"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h2>
                        <i class="fa fa-user"></i>
                        <span class="break">contact details</span>
                    </h2>
                </div>
                <div class="box-content">
                    <div class="form-group clearfix">
                        <label class="control-label">
                            <span> Name :</span>
                        </label>
                        <span>{{ contact.name }}</span>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label">
                            <span>Email :</span>
                        </label>
                        <span>{{ contact.email }}</span>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label">
                            <span>Phone :</span>
                        </label>
                        <span>{{ contact.phone }}</span>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label">
                            <span>Adress :</span>
                        </label>
                        <span>{{ contact.adress }}</span>
                    </div>
                </div>
            </div>
            <a href="{{ path('contacts_index') }}" class="btn btn-md btn-info">
                <i class="fa fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

{% endblock %}
